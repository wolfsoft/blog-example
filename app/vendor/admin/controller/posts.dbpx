<?xml version="1.0"?>

<dbp:module
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:lib="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
>

<dbp:tag name="admin-posts-index-controller">
	<app:admin-page>
		<app:admin-view-posts />
	</app:admin-page>
</dbp:tag>

<dbp:tag name="admin-posts-publish-controller">
	<app:post-publish>
		<dbp:throw code="302">/admin/posts</dbp:throw>
	</app:post-publish>
</dbp:tag>

<dbp:tag name="admin-posts-publish-controller">
	<app:post-delete>
		<dbp:throw code="302">/admin/posts</dbp:throw>
	</app:post-delete>
</dbp:tag>

</dbp:module>
