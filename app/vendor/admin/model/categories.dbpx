<?xml version="1.0"?>

<dbp:module
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:lib="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
>

<dbp:tag name="categories-get">
	<app:database>
		<app:query statement="select title from category where role=&quot;category&quot;">
			<dbp:execute/>
		</app:query>
	</app:database>
</dbp:tag>

<dbp:tag name="categories-get-all">
	<app:database>
		<app:query statement="select * from category order by role, title">
			<dbp:execute/>
		</app:query>
	</app:database>
</dbp:tag>

</dbp:module>
