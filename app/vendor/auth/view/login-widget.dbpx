<?xml version="1.0"?>

<dbp:module
	xml:lang="en"
	xmlns:its="http://www.w3.org/2005/11/its" 
	its:version="2.0"
	its:translate="yes"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
>

<dbp:tag name="auth-view-login-widget">
	<dbp:switch test="{len($user_id) > 0}">
		<dbp:case match="1">
			<a href="/auth/logout" rel="nofollow">Log Out</a>
		</dbp:case>
		<dbp:case>
			<a href="/auth/login" rel="nofollow">Log In</a>
		</dbp:case>
	</dbp:switch>
</dbp:tag>

</dbp:module>
