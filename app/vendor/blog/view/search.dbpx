<?xml version="1.0"?>

<dbp:module
	xml:lang="en"
	xmlns:its="http://www.w3.org/2005/11/its" 
	its:version="2.0"
	its:translate="yes"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:lib="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
>

<its:rules version="2.0">
	<its:translateRule selector="//*/@placeholder" translate="yes"/>
</its:rules>
  
<dbp:tag name="search">
	<div class="well">
		<h4>Blog Search</h4>
		<div class="input-group">
			<input type="text" class="form-control" placeholder="Type search phraseâ€¦" />
			<span class="input-group-btn">
				<button class="btn btn-default" type="button">
					<span class="glyphicon glyphicon-search"></span>
			</button>
			</span>
		</div>
	</div>
</dbp:tag>

</dbp:module>
