<?xml version="1.0"?>

<dbp:module
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:lib="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
>

<dbp:tag name="blog-description">
	{$blog_content}
</dbp:tag>


<dbp:tag name="blog-post-teaser">
	<h3>
		<a href="#">{$title_long}</a>
	</h3>

	<p>
		<span class="fa fa-list-alt"></span>&amp;#x20;Posted to&amp;#x20;<a href="#">Home</a>
	</p>
	<p>
		<span class="fa fa-tag"></span>&amp;#x20;<a href="#">#HowTo</a>,&amp;#x20;<a href="#">#Snippets</a>
	</p>

	<p><span class="glyphicon glyphicon-time"></span>&amp;#x20;Posted on {$date_publish}</p>

	<hr />
	<img class="img-responsive" width="900" height="300" src="/images/placeholder-900x300.png" alt="" />
	<hr />

	<p>
	{$teaser}
	</p>

	<a class="btn btn-primary" href="#">Read More&amp;#x20;<span class="glyphicon glyphicon-chevron-right"></span></a>

	<hr />
</dbp:tag>

<dbp:tag name="content">

	<app:blog-description />

	<br />
	<h2>Latest Posts</h2>
	<hr />

	<app:posts-get>
		<app:blog-post-teaser />
	</app:posts-get>

	<!-- Pager -->
	<ul class="pager">
		<li class="previous">
			<a href="#">« Older</a>
		</li>
		<li class="next">
			<a href="#">Newer »</a>
		</li>
	</ul>
</dbp:tag>

</dbp:module>
