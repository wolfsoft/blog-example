<?xml version="1.0"?>

<dbp:module
	xml:lang="en"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:dbp="http://dbpager.org.ru/schemas/dbp/3.0"
	xmlns:lib="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:app="http://dbpager.org.ru/schemas/dbp/3.0/custom"
	xmlns:its="http://www.w3.org/2005/11/its" 
	its:version="1.0"
	its:translate="no"
>

<dbp:tag name="category-widget">
	<!-- Blog Categories Well -->
	<div class="well">
		<h4 its:translate="yes">Categories</h4>
		<div class="row">
			<div class="col-lg-12">
				<ul class="list-unstyled two-column">
					<app:data-category>
						<li><a href="/category/{$id}">{$title}</a></li>
					</app:data-category>
				</ul>
			</div>
		</div>
		<h4 its:translate="yes">Tags</h4>
		<div class="row">
			<div class="col-lg-12">
				<ul class="list-inline">
					<app:data-tag>
						<li><a href="/tag/{$id}">#{$title}</a></li>
					</app:data-tag>
				</ul>
			</div>
		</div>
	</div>
</dbp:tag>

</dbp:module>
